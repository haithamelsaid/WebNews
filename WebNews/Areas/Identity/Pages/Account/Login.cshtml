@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container">
    <div class="row">
        <div>
            <h1 style="margin: 25px 0px 25px 42%;">@ViewData["Title"]</h1>
            <form id="account" method="post" style="border: outset; padding:15px 30px; margin-bottom:40px">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    @*<label asp-for="Input.Email"></label>*@
                    <input placeholder="Email" asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br />
                <div style="margin-bottom:10px" class="form-group">
                    @*<label asp-for="Input.Password"></label>*@
                    <input placeholder="Password" asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button style="margin-top: 15px; margin-left: 40%; margin-bottom: 15px" type="submit" class="btn btn-primary">Log in</button>
                    <button style="margin-top: 15px; margin-left: 2%; margin-bottom: 15px" type="submit" class="btn btn-danger" asp-area="Identity" asp-page="/Account/Register">Register as a new user</button>

                </div>
                
            </form>
        </div>

    </div>
</div>

