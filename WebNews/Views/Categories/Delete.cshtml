@model WebNews.Models.Categories

@{
    ViewData["Title"] = "Delete";
}

<h3 style="text-align: center; padding-top:25px">Are you sure you want to delete this?</h3>
<div class="col-10 fa-align-center" style="margin-left: auto; margin-right: auto;">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Discription)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Discription)
                </td>
            </tr>
        </tbody>
    </table>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-danger">Back to List</a>
    </form>
</div>
