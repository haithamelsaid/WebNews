@model IEnumerable<WebNews.Models.News>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center; padding-top:25px">News Management</h1>


<div class="col-10 fa-align-center" style="margin-left: auto; margin-right: auto;">
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NewsDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Topic)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.category)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:300px">
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NewsDate)
                    </td>
                    @if (!string.IsNullOrEmpty(item.Image))
                    {<td>
                        <img src="../@item.Image" style="width:100px"/>
                    </td>
                    }
                    else
                    {
                <td>
                </td>}
                    <td style="width:250px;">
                        @Html.DisplayFor(modelItem => item.Topic)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.category.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
